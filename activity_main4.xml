<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background = "@drawable/gradient_drawable"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent"
    tools:context = ".MainActivity"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="66dp"
        android:layout_height="65dp"

        android:layout_centerHorizontal="false"
        android:layout_marginStart="1dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/def" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="242dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="2dp"
        android:text="BLOODSOURCE"
        android:textColor="#DA0909"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/textView4"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="2dp"
        android:text="Donor Portal"
        android:textColor="#DA0909"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="141dp"
        android:layout_marginRight="12dp"
        android:hint="@string/Name1"
        android:inputType="textPersonName"
        android:text=""
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editText4"
        android:layout_width="109dp"
        android:layout_height="59dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="191dp"
        android:layout_marginRight="12dp"

        android:hint="@string/Age1"
        android:inputType="number"
        android:text=""
        android:textStyle="bold" />


    <TextView
        android:id="@+id/editText1"
        android:layout_width="109dp"
        android:layout_height="29dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="213dp"
        android:layout_marginRight="12dp"
        android:gravity="top"
        android:hint="@string/Sex1"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/editText5"
        android:layout_width="149dp"
        android:layout_height="29dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="281dp"
        android:layout_marginRight="12dp"
        android:hint="@string/Group1"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editText11"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="271dp"
        android:layout_marginRight="12dp"
        android:hint="@string/Weight"
        android:text=""
        android:textSize="17sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="331dp"
        android:layout_marginRight="12dp"
        android:hint="@string/Hospital1"
        android:text=""
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="401dp"
        android:layout_marginRight="12dp"
        android:hint="@string/Hospitaladdress1"
        android:inputType="textLongMessage|textPostalAddress"
        android:singleLine="false"
        android:text=""
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="471dp"
        android:layout_marginRight="12dp"
        android:hint="@string/Date1"
        android:inputType="date"
        android:text=""
        android:textStyle="bold" />




    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="639dp"
        android:layout_marginRight="12dp"
        android:textColor="#DA0909"
        android:text="@string/Save1"
        app:backgroundTint="#fff" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="471dp"
        android:layout_marginRight="12dp"
        android:hint="@string/Contact1"
        android:inputType="number|textPhonetic"
        android:text=""
        android:textStyle="bold">

    </EditText>





    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="205dp"
        android:layout_marginRight="12dp"
        android:text="Male" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="302dp"
        android:layout_marginTop="205dp"
        android:layout_marginRight="2dp"
        android:text="Female" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="281dp"
        android:layout_marginRight="2dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="569dp"
        android:layout_marginRight="12dp"
        android:text="By checking this you agree to our Terms and Conditions."
        android:textColor="#fff"
        android:textSize="13sp" />

</RelativeLayout>